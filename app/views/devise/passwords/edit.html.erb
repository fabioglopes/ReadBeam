<section>
	<%= render :partial => 'shared/flash', :locals => {:flash => flash} if flash %>

	<div class="page-header">
	  <h1>Change your password</h1>
	</div>
	<div class="row">
	    <div class="span16 columns">
				<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
	        <%= devise_error_messages! %>
				  <%= f.hidden_field :reset_password_token %>
	
	        <fieldset>
	          <legend>Enter your new password</legend>
	          <div class="clearfix">
	            <%= f.label :password %>
	            <div class="input">
	              <%= f.password_field :password, :title => '5..20 characters will do', :required => true, :class => :xlarge %></p>
	            </div>
	          </div> <!-- /clearfix -->
	          <div class="clearfix">
	            <%= f.label :password_confirmation %>
	            <div class="input">
	              <%= f.password_field :password_confirmation, :title => 'To avoid typos type the above password again here', :required => true, :class => :xlarge %></p>
	            </div>
	          </div> <!-- /clearfix -->

	          <div class="actions">
	            <%= f.submit 'Change my password', :class => 'btn primary' %>
	          </div>
	        </fieldset>
	      </form>
	    </div>
	  </div>
	<% end %>
</section>